text="new dreams from below"
s=0
cls()

function _draw()
	⧗=t()
	--cls(6)
	s = (s+1)%4

	for x=0+s&1,128,2 do
		for y=0+(s&2)/2,128,2 do
			c = sin((x/128)*(y/128)+⧗)*4
			--c=6
			pset(x,y,c)
		end
	end
			
	for i=1,#text do
	 x = (148 + i*8 -⧗*30)%360-6
	 y = 60 + sin(x/50)*30*sin(x/256)
 	print("\^p"..text[i],		
	 	x, y,
	 	10)
	 print("\^p"..text[i],		
	 	x+1,y+1,
	 	0)
	end
end
