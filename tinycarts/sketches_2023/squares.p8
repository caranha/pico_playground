pico-8 cartridge // http://www.pico-8.com
version 39
__lua__
dbx=-1.5
dby=-2
bx=30
by=50

function _draw()
	⧗=t()
	cls()

	wcx=64+cos(⧗/3)*40
	wcy=64+sin(⧗/7)*40
	for x=1,128,8 do
	 for y=1,128,8 do
	 	cx=x-wcx
	 	cy=y-wcy
	 	d=(cx*cx+cy*cy)^.5/100
	 	r=(1-cos(-1*⧗+d))*5
	  rectfill(x+r,y+r,x-r,y-r,x+y)
	 end
	end
	
	h=abs(sin(⧗/2)*8)
	s=4+h/2
	fillp(▒)
	circfill(bx+h,by+h,s,0)
	fillp()
	circfill(bx-h,by-h,s,5)
	circfill(bx-h+s/3,by-h-s/3,s/3,7) 
	bx+=dbx
	by+=dby	
	dbx=mid(8,bx,120)==bx and dbx or dbx*-1
	dby=mid(8,by,120)==by and dby or dby*-1
end
