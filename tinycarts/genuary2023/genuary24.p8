pico-8 cartridge // http://www.pico-8.com
version 39
__lua__
bc=rnd({"★","⧗","∧"})
bcc=rnd(16)

w=8+rnd(6)
h=12+rnd(4)
fc = rnd({4,9,15})

ew1=1+rnd(4)
ew2=ew1+2+rnd(4)
eh1=-1*(3+rnd(3))
eh2=-1*rnd(3)
glass=rnd({true,false})
ec=rnd(4)

function _draw()
	cls(6)
	for i = -2,18 do
		for j = -2,18 do
			?bc,i*16,j*16,bcc+i%2
		end
	end
	
	fx =30
	fy =95+sin(t())*2
	
	-- face
	ovalfill(fx-w,fy-h,fx+w,fy+h,fc)
	
	-- eyes
	for i=-1,1,2 do
		if glass then
			rectfill(fx+ew1*i,fy+eh1,fx+ew2*i,fy+eh2,ec)
			line(fx-ew1,fy+eh1+1,fx+ew1,fy+eh1+1,ec)
		else
			ovalfill(fx+ew1*i,fy+eh1,fx+ew2*i,fy+eh2,ec)
		end
	end	
end
